<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chatbot Brainstorming</title>
  <link href="/styles/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">Chatbot Brainstorming</h1>
    
    <!-- Chat Window -->
    <div id="chat-window" class="border p-4 h-64 overflow-y-auto bg-gray-50 mb-4">
    </div>
    <button id="save-btn" class="bg-green-500 text-white px-4 py-2 rounded mr-2">Save Idea</button>
    
    <!-- Input Field -->
    <input id="chat-input" type="text" class="w-full p-2 border rounded mb-2" placeholder="Enter your message..." />
    
    <button id="send-btn" class="bg-blue-500 text-white px-4 py-2 rounded">Send</button>
    <!-- Choice Buttons -->
    <div id="choice-buttons" class="m-3 hidden">
      <button id="save-btn" class="bg-green-500 text-white px-4 py-2 rounded mr-2">Save Idea</button>
      <button id="continue-btn" class="bg-orange-500 text-white px-4 py-2 rounded">Continue</button>
    </div>
    
    <!-- Ideas List -->
    <h2 class="text-xl font-bold mt-6">Saved Ideas</h2>
    <ul id="ideas-list" class="list-disc pl-5 mb-4"></ul>
    
    <!-- Reset Button -->
    <button id="reset-btn" class="bg-red-500 text-white px-4 py-2 rounded">Reset</button>
  </div>

<script src="/scripts/app.js"></script> <!-- Ensure this path is correct -->
</body>
</html>
